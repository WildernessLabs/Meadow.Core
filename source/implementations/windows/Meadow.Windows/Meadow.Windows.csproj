<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Version>1.10.2</Version>
    <Authors>Wilderness Labs, Inc</Authors>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <LangVersion>10.0</LangVersion>
    <TargetFrameworks>net7.0-windows;net7.0</TargetFrameworks>
    <Nullable>enable</Nullable>
    <AssemblyName>Meadow.Windows</AssemblyName>
    <Company>Wilderness Labs, Inc</Company>
    <PackageProjectUrl>http://developer.wildernesslabs.co/Meadow/</PackageProjectUrl>
    <PackageId>Meadow.Windows</PackageId>
    <PackageIcon>icon.png</PackageIcon>
    <RepositoryUrl>https://github.com/WildernessLabs/Meadow.Core</RepositoryUrl>
    <PackageTags>Meadow</PackageTags>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Description>An implementation of the Meadow software stack for Windows targets</Description>
  </PropertyGroup>
    
  <ItemGroup>
    <PackageReference Include="System.IO.Ports" Version="7.0.0" />
    <PackageReference Include="System.Net.WebSockets" Version="4.3.0" />
    <PackageReference Include="Meadow" Version="1.10.2" />
    <ProjectReference Condition=" '$(TargetFramework)' == 'net7.0-windows'" Include="..\..\..\..\..\Meadow.Foundation\Source\Meadow.Foundation.Peripherals\Displays.WinForms\Driver\Displays.WinForms.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\..\..\icon.png" Link="icon.png" Pack="true" PackagePath="" />
  </ItemGroup>
</Project>
